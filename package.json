{
  "name": "vizeel-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Vizeel monorepo with React webapp and NestJS server",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev --concurrency=20",
    "dev:webapp": "npm run dev --workspace=apps/webapp",
    "dev:server": "npm run start:dev --workspace=apps/server",
    "build": "turbo run build",
    "build:webapp": "npm run build --workspace=apps/webapp",
    "build:server": "npm run build --workspace=apps/server",
    "start:server": "npm run start:prod --workspace=apps/server"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  }
}